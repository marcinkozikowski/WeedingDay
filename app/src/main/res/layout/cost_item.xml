<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="5"
    android:rowCount="3"
    tools:context="com.example.dell.weedingday.Activities.CostActivity"
    android:background="@android:color/transparent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TitleCoast"
        android:layout_margin="@dimen/controls_margin"
        android:text="TytuÅ‚"
        android:textSize="@dimen/text_size"
        android:textColor="@color/darkGray"
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:layout_row="0"/>

    <ImageView
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_margin="@dimen/controls_margin"
        android:id="@+id/CostImg"
        android:src="@drawable/ic_dollar_symbol"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_row="1"
        android:layout_gravity="center"
        android:layout_rowSpan="2"/>
    <TextView
        android:layout_height="wrap_content"
        android:id="@+id/AboutCoast"
        android:textColor="@color/darkGray"
        android:layout_margin="@dimen/controls_margin"
        android:text="Opis kosztu"
        android:lines="2"
        android:textSize="@dimen/text_size"
        android:layout_column="1"
        android:layout_columnWeight="3"
        android:layout_row="1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/CostPriceTextView"
        android:layout_margin="@dimen/controls_margin"
        android:textColor="@color/darkGray"
        android:layout_gravity="top"
        android:text="140zl"
        android:textSize="@dimen/text_size"
        android:layout_column="1"
        android:layout_columnWeight="4"
        android:layout_row="2"/>


    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/delete"
        android:id="@+id/deleteCostBtn"
        android:layout_margin="10dp"
        android:onClick="DeleteCost"
        android:layout_column="3"
        android:layout_row="1"
        android:layout_rowSpan="2"
        android:layout_gravity="center"
        android:layout_columnWeight="1"
        />
</GridLayout>