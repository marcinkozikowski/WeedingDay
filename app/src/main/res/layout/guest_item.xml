<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="5"
    android:rowCount="2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/controls_margin"
        android:id="@+id/GuestNameList"
        android:text="Imie"
        android:layout_column="0"
        android:layout_columnWeight="2"
        android:layout_row="0"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/GuestSurnameList"
        android:layout_margin="@dimen/controls_margin"
        android:text="Nazwisko"
        android:layout_column="1"
        android:layout_columnWeight="2"
        android:layout_row="0"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/controls_margin"
        android:id="@+id/GuestFrindNameList"
        android:layout_columnWeight="2"
        android:text="Imie"
        android:layout_column="1"
        android:layout_row="1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/GuestFriendSurnameList"
        android:layout_margin="@dimen/controls_margin"
        android:text="Nazwisko"
        android:layout_column="2"
        android:layout_columnWeight="2"
        android:layout_row="1"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/delete"
        android:id="@+id/deleteGuestBtn"
        android:layout_margin="10dp"
        android:onClick="DeleteGuest"
        android:layout_column="3"
        android:layout_gravity="right"
        android:layout_row="0"
        android:layout_rowSpan="2"
        />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="right"
        android:src="@drawable/edit1"
        android:id="@+id/editBtn"
        android:layout_margin="10dp"
        android:layout_column="4"
        android:layout_row="0"
        android:layout_rowSpan="2"
        android:onClick="EditGuest"/>
</GridLayout>