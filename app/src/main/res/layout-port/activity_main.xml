<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:columnCount="2"
    android:rowCount="5"
    tools:context="com.example.dell.weedingday.Activities.MainActivity"
    android:background="@drawable/background">


    <LinearLayout
        android:id="@+id/guestsButton"
        android:orientation="vertical"
        android:layout_gravity="center|fill_vertical|fill_horizontal"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_column="0"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_row="0"
        android:onClick="GuestsActivityStart"
        android:background="@android:color/transparent">

        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/ic_collaboration"
            android:layout_gravity="center"
            android:maxWidth="75dp"
            android:duplicateParentState="true"
            android:layout_margin="@dimen/ButtonsMargin"/>

        <TextView
            android:layout_width="75dp"
            android:layout_height="45dp"
            android:text="@string/Guests"
            android:textSize="@dimen/text_size"
            android:textColor="@animator/button_state"
            android:duplicateParentState="true"
            android:textAlignment="center"
            android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/cashButton"
        android:orientation="vertical"
        android:layout_gravity="center|fill_vertical|fill_horizontal"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_column="1"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:onClick="CostActivityStart"
        android:layout_row="0"
        android:background="@android:color/transparent">

        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/ic_dollar_symbol"
            android:maxHeight="75dp"
            android:layout_gravity="center"
            android:maxWidth="75dp"
            android:layout_margin="@dimen/ButtonsMargin"/>

        <TextView
            android:layout_width="75dp"
            android:layout_height="45dp"
            android:text="@string/Costs"
            android:textSize="@dimen/text_size"
            android:textColor="@animator/button_state"
            android:textAlignment="center"
            android:layout_gravity="center"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/taskButton"
        android:orientation="vertical"
        android:layout_gravity="center|fill_vertical|fill_horizontal"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_rowWeight="1"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_row="1"
        android:onClick="TaskActivityStart"
        android:background="@android:color/transparent">

        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/task1"
            android:maxHeight="75dp"
            android:layout_gravity="center"
            android:maxWidth="75dp"
            android:layout_margin="@dimen/ButtonsMargin"/>

        <TextView
            android:layout_width="75dp"
            android:layout_height="45dp"
            android:text="@string/Task"
            android:textSize="@dimen/text_size"
            android:textColor="@animator/button_state"
            android:textAlignment="center"
            android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/serviceButton"
        android:orientation="vertical"
        android:layout_gravity="center|fill_vertical|fill_horizontal"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:onClick="ServiceActivityStart"
        android:layout_rowWeight="1"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_row="1"
        android:background="@android:color/transparent">

        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/ic_tuxedo"
            android:maxHeight="75dp"
            android:layout_gravity="center"
            android:maxWidth="75dp"
            android:layout_margin="@dimen/ButtonsMargin"/>

        <TextView
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:text="@string/Service"
            android:textSize="@dimen/text_size"
            android:textColor="@animator/button_state"
            android:textAlignment="center"
            android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/timerButton"
        android:orientation="vertical"
        android:layout_gravity="center|fill_vertical|fill_horizontal"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_column="0"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_row="2"
        android:onClick="TimerActivityStart"
        android:background="@android:color/transparent">

        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/timer"
            android:maxHeight="75dp"
            android:layout_gravity="center"
            android:maxWidth="75dp"
            android:layout_margin="@dimen/ButtonsMargin"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:text="@string/Counting"
            android:textSize="@dimen/text_size"
            android:textColor="@animator/button_state"
            android:textAlignment="center"
            android:layout_gravity="center"/>

    </LinearLayout>


</GridLayout>
